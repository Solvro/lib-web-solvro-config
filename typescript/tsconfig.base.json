{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Solvro Base",
  "docs": "https://github.com/solvro/style-guide",
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "strict": true
  }
}
