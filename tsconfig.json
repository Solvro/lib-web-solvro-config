  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "outDir": "./dist"
  },
  "include": ["**/*.ts", "**/*.js", ".commitlintrc.js", ".releaserc.js"],
  "exclude": ["./dist/**/*"]
}
